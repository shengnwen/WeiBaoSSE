<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/detail_bg"
    android:orientation="vertical"
    
    >
	<ImageView 
	    android:paddingTop="10dp"
                android:src="@drawable/nip"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="right|top"
                />
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbarStyle="outsideOverlay" 
        android:paddingTop="40dp"
    	android:paddingLeft="35dp"
    	android:paddingRight="35dp">
		
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            >
            
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_gravity="left">

                <ImageView
                    android:id="@+id/pref_image"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:onClick="head_xiaohei"
                    android:src="@drawable/ic_launcher" />

                <TextView
                    android:id="@+id/pref_mc_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="必胜客"
                    android:textColor="#2181b2"
                    android:textSize="20sp" 
                    android:clickable="true"
                    android:onClick="openMc"/>
            </LinearLayout>
            <TextView android:layout_width="fill_parent"
    			android:layout_height="1dp"
    			android:background="#6dcefe"
    			android:focusable="false"
    			android:layout_marginTop="5dp"
    			android:layout_marginBottom="5dp"
    		/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:orientation="vertical" 
                android:gravity="left">
                <TextView
                        android:id="@+id/pref_title"
                        android:layout_gravity="left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="学生证八折！"
                        android:textColor="#ff6170"
                        android:textSize="15sp" />
                
                <TextView android:layout_width="match_parent"
    			android:layout_height="1dp"
    			android:background="#6dcefe"
    			android:focusable="false"
    			android:layout_marginTop="5dp"
    			android:layout_marginBottom="5dp"
    			/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginBottom="10dp"
                        android:text="优惠详情"
                        android:textColor="#4A6D7F"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/pref_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="021-12345678"
                        android:textColor="#000"
                        android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</FrameLayout>