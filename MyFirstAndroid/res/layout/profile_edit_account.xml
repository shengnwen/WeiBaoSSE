<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
    	android:paddingTop="15dp" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微宝号"  
                android:textSize="20sp"
                android:textColor="#3fa8de"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:id="@+id/weiBaoAccountIDTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp" 
                android:text="test"/>

        </TableRow>
 <TextView android:layout_width="fill_parent"
    	android:layout_height="3dp"
    	android:background="#afdaff"
    	android:focusable="false"
    	android:layout_marginTop="10dp"
    	android:layout_marginBottom="10dp"
    />
        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/phoneManageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机号"  
                android:textSize="20sp"
                android:textColor="#3fa8de"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:id="@+id/weiBaoAccountPhoneTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp" 
                android:drawableRight="@drawable/goto_icon"
                android:layout_weight="1"
                android:paddingRight="15dp"/>

        </TableRow>
 <TextView android:layout_width="fill_parent"
    	android:layout_height="3dp"
    	android:background="#afdaff"
    	android:focusable="false"
    	android:layout_marginTop="10dp"
    	android:layout_marginBottom="10dp"
    />
        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/emailManageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="邮件地址" 
                android:textSize="20sp"
                android:textColor="#3fa8de"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"/>

            <TextView
                android:id="@+id/weiBaoAccountIsEmailBoundedHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="test" 
                android:textSize="20sp" 
                android:drawableRight="@drawable/goto_icon"
                android:layout_weight="1"
                android:paddingRight="15dp"/>

        </TableRow>
 <TextView android:layout_width="fill_parent"
    	android:layout_height="3dp"
    	android:background="#afdaff"
    	android:focusable="false"
    	android:layout_marginTop="10dp"
    	android:layout_marginBottom="5dp"
    />
    </TableLayout>

</LinearLayout>
